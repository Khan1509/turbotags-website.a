{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/generate",
      "dest": "/api/generate.js",
      "methods": ["POST"]
    },
    {
      "src": "/features",
      "dest": "/public/features.html"
    },
    {
      "src": "/generator",
      "dest": "/public/generator.html"
    },
    {
      "src": "/privacy",
      "dest": "/public/privacy.html"
    },
    {
      "src": "/terms",
      "dest": "/public/terms.html"
    },
    {
      "src": "/disclaimer",
      "dest": "/public/disclaimer.html"
    },
    {
      "src": "/blog",
      "dest": "/public/blog/index.html"
    },
    {
      "src": "/blog/best-tiktok-hashtags-2025",
      "dest": "/public/blog/best-tiktok-hashtags-2025.html"
    },
    {
      "src": "/blog/instagram-growth",
      "dest": "/public/blog/instagram-growth.html"
    },
    {
      "src": "/blog/youtube-shorts-strategy",
      "dest": "/public/blog/youtube-shorts-strategy.html"
    },
    {
      "src": "/blog/youtube-seo-tags-guide",
      "dest": "/public/blog/youtube-seo-tags-guide.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
