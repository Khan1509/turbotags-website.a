{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node@2.0.0",
      "config": {
        "runtime": "nodejs22.x",
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate",
      "destination": "/api/generate.js"
    },
    {
      "source": "/features",
      "destination": "/features"
    },
    {
      "source": "/generator",
      "destination": "/generator/index.html"
    },
    {
      "source": "/terms",
      "destination": "/terms"
    },
    {
      "source": "/privacy",
      "destination": "/privacy"
    },
    {
      "source": "/disclaimer",
      "destination": "/disclaimer"
    },
    {
      "source": "/blog",
      "destination": "/blog/index.html"
    },
    {
      "source": "/blog/best-tiktok-hashtags-2025",
      "destination": "/blog/best-tiktok-hashtags-2025"
    },
    {
      "source": "/blog/instagram-growth",
      "destination": "/blog/instagram-growth"
    },
    {
      "source": "/blog/youtube-seo-tags-guide",
      "destination": "/blog/youtube-seo-tags-guide"
    },
    {
      "source": "/blog/youtube-shorts-strategy",
      "destination": "/blog/youtube-shorts-strategy"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
