{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/|blog/|legal/|generator/|screenshots/|styles.css|manifest.json|favicon.svg|robots.txt|sitemap.xml|.*\\.html$|.*\\.txt$).*)",
      "destination": "/index.html"
    }
  ]
}
