{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate",
      "destination": "/api/generate.js"
    },
    {
      "source": "/",
      "destination": "/public/generator/index.html"
    },
    {
      "source": "/features",
      "destination": "/public/features"
    },
    {
      "source": "/privacy",
      "destination": "/public/privacy"
    },
    {
      "source": "/terms",
      "destination": "/public/terms"
    },
    {
      "source": "/disclaimer",
      "destination": "/public/disclaimer"
    },
    {
      "source": "/blog",
      "destination": "/public/blog/index.html"
    },
    {
      "source": "/blog/best-tiktok-hashtags-2025",
      "destination": "/public/blog/best-tiktok-hashtags-2025"
    },
    {
      "source": "/blog/instagram-growth",
      "destination": "/public/blog/instagram-growth"
    },
    {
      "source": "/blog/youtube-seo-tags-guide",
      "destination": "/public/blog/youtube-seo-tags-guide"
    },
    {
      "source": "/blog/youtube-shorts-strategy",
      "destination": "/public/blog/youtube-shorts-strategy"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)\\.html",
      "destination": "/$1",
      "permanent": true
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
