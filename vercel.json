{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node@2.0.0",
      "config": {
        "runtime": "nodejs22.x",
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/ads.txt",
      "destination": "https://srv.adstxtmanager.com/19390/turbotags.app",
      "permanent": true
    }
  ],
  "rewrites": [
    // Explicitly route API endpoint
    {
      "source": "/api/generate",
      "destination": "/api/generate.js"
    },
    // Route the root URL to the main generator index.html
    {
      "source": "/",
      "destination": "/public/generator/index.html"
    },
    // Route blog pages and their assets
    {
      "source": "/blog",
      "destination": "/public/blog/index.html"
    },
    {
      "source": "/blog/(.*)",
      "destination": "/public/blog/$1"
    },
    // Route all other files that should be served from the public/generator directory.
    // This includes privacy.html, terms.html, disclaimer.html, manifest.json, favicons,
    // and any other assets directly linked from index.html in public/generator.
    {
      "source": "/(.*)",
      "destination": "/public/generator/$1"
    }
  ]
}
