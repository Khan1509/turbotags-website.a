{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/generate",
      "dest": "/api/generate.js",
      "methods": ["POST"]
    },
    {
      "src": "/features",
      "dest": "/public/features",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/privacy",
      "dest": "/public/privacy",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/terms",
      "dest": "/public/terms",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/disclaimer",
      "dest": "/public/disclaimer",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/blog/best-tiktok-hashtags-2025",
      "dest": "/public/blog/best-tiktok-hashtags-2025",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/blog/instagram-growth",
      "dest": "/public/blog/instagram-growth",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/blog/youtube-seo-tags-guide",
      "dest": "/public/blog/youtube-seo-tags-guide",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/blog/youtube-shorts-strategy",
      "dest": "/public/blog/youtube-shorts-strategy",
      "headers": { "Content-Type": "text/html" }
    },
    {
      "src": "/blog",
      "dest": "/public/blog/index.html"
    },
    {
      "src": "/generator",
      "dest": "/public/generator/index.html"
    },
    {
      "src": "/",
      "dest": "/public/generator/index.html"
    },
    {
      "src": "/(.*)\\.html",
      "status": 301,
      "headers": { "Location": "/$1" }
    },
    {
      "src": "/(.*\\.(ico|png|jpg|svg|css|js|xml|txt))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/generator/index.html"
    }
  ],
  "trailingSlash": false
}
