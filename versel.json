{
  "version": 2,
  "builds": [
    {
      "src": "api/generate.js",
      "use": "@vercel/node@2.0.0",
      "config": {
        "runtime": "nodejs22.x",
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/ads.txt",
      "destination": "https://srv.adstxtmanager.com/19390/turbotags.app",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate",
      "destination": "/api/generate.js"
    },
    {
      "source": "/",
      "destination": "/generator/index.html"
    },
    {
      "source": "/blog",
      "destination": "/blog/index.html"
    },
    {
      "source": "/blog/(.*)",
      "destination": "/blog/$1"
    },
    {
      "source": "/manifest.json",
      "destination": "/generator/manifest.json"
    },
    {
      "source": "/privacy.html",
      "destination": "/generator/privacy.html"
    },
    {
      "source": "/terms.html",
      "destination": "/generator/terms.html"
    },
    {
      "source": "/disclaimer.html",
      "destination": "/generator/disclaimer.html"
    },
    {
      "source": "/robots.txt",
      "destination": "/generator/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/generator/sitemap.xml"
    },
    {
      "source": "/favicon.ico",
      "destination": "/generator/favicon.ico"
    },
    {
      "source": "/favicon.png",
      "destination": "/generator/favicon.png"
    },
    {
      "source": "/favicon.svg",
      "destination": "/generator/favicon.svg"
    },
    {
      "source": "/favicon_16x16.png",
      "destination": "/generator/favicon_16x16.png"
    },
    {
      "source": "/favicon_192x192.png",
      "destination": "/generator/favicon_192x192.png"
    },
    {
      "source": "/favicon_32x32.png",
      "destination": "/generator/favicon_32x32.png"
    },
    {
      "source": "/favicon_512x512.png",
      "destination": "/generator/favicon_512x512.png"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
